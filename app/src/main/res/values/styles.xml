<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="speedometerStyle">@style/SpeedometerDefaultStyle</item>
    </style>

    <style name="SpeedometerDefaultStyle">
        <item name="low_speed">30</item>
        <item name="mid_speed">90</item>
        <item name="max_speed">200</item>
        <item name="low_speed_color">@android:color/holo_green_light</item>
        <item name="mid_speed_color">@android:color/holo_orange_light</item>
        <item name="max_speed_color">@android:color/holo_red_dark</item>
        <item name="text_size">@dimen/defaultTextSize</item>
        <item name="text_color">@android:color/black</item>
        <item name="arrow_color">@android:color/black</item>
    </style>


</resources>
